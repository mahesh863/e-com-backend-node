{
  "name": "ecom-backend",
  "version": "1.0.0",
  "main": "app.js",
  "author": "mahesh",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "npx tsc",
    "start:prod": "node build/app.js",
    "start:dev": "nodemon ./src/app.ts",
    "lint": "eslint .  --ext .ts",
    "lint:fix": "eslint .  --ext .ts --fix",
    "db:dev:rm": "docker compose rm dev-db -s -f -v",
    "db:dev:up": "docker compose up dev-db -d",
    "db:test:rm": "docker compose rm test-db -s -f -v",
    "db:test:up": "docker compose up test-db -d",
    "cache:dev:up": "docker compose up dev-cache -d",
    "cache:dev:rm": "docker compose rm dev-cache -s -f -v",
    "start:test": "yarn db:test:rm && yarn db:test:up && dotenv -e .env.test -- jest --no-cache --detectOpenHandles",
    "start:husky-test": "yarn db:test:rm && yarn db:test:up && dotenv -e .env.test -- jest",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/cors": "^2.8.15",
    "@types/uuid": "^9.0.6",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
